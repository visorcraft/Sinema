<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.REQUEST_INSTALL_PACKAGES" />
    <uses-feature android:name="android.software.leanback" android:required="true" />
    <uses-feature android:name="android.hardware.touchscreen" android:required="false" />

    <application
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher"
        android:label="Sinema"
        android:supportsRtl="true"
        android:theme="@style/Theme.Sinema"
        android:name=".SinemaApp"
        android:banner="@drawable/banner"
        android:usesCleartextTraffic="true">

        <activity
            android:name=".ui.MainActivity"
            android:exported="true"
            android:screenOrientation="landscape">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LEANBACK_LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".ui.FolderBrowseActivity"
            android:screenOrientation="landscape" />

        <activity
            android:name=".ui.SceneDetailActivity"
            android:screenOrientation="landscape"
            android:theme="@style/Theme.Sinema.Details" />

        <activity
            android:name=".ui.PlaybackActivity"
            android:screenOrientation="landscape"
            android:configChanges="orientation|keyboardHidden|screenSize" />

        <activity
            android:name=".ui.SearchActivity"
            android:screenOrientation="landscape" />

        <activity
            android:name=".ui.SettingsActivity"
            android:screenOrientation="landscape" />

        <activity
            android:name=".ui.FavoritesActivity"
            android:screenOrientation="landscape" />

        <activity
            android:name=".ui.BrowseFoldersActivity"
            android:screenOrientation="landscape" />

        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="${applicationId}.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>

        <activity
            android:name=".ui.PinActivity"
            android:screenOrientation="landscape"
            android:theme="@style/Theme.Sinema" />

        <activity
            android:name=".ui.SetupActivity"
            android:screenOrientation="landscape"
            android:theme="@style/Theme.Sinema" />

    </application>
</manifest>
